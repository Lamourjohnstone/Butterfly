plot(mapdata, col = 'grey', border = 'darkgrey', ylab="Latitude (°N)", xlab="Longitude(°E)", main="2000-2009", xlim=extent.uk[c(1,3)], ylim=extent.uk[c(2,4)], axes=TRUE, cex.lab=1.5)
points(A22$Longitude, A22$Latitude, col='red',
       cex=0.75)

